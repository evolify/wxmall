/* pages/category/index.wxss */
.container{
  align-items:stretch;
  padding:0;
}
.cate-nav{
  padding:5px;
  box-shadow:0 4px 10px -6px gray;
  background: #009999;
  color:#fff;
}
.search-wrapper{
  background:#fff;
}
.search-box{
  display: flex;
  flex-flow:row nowrap;
  align-items: center;
  background: #eee;
  margin:10rpx;
  padding:10rpx;
}
.search-box .input-keywords{
  flex-grow:1;
}
.search-box .btn-search{
  flex-shrink: 0;
  padding:0 10px;
}
.cate-grid{
  display: flex;
  flex-flow:row wrap;
  margin-top:10px;
  justify-content: space-between;
}
.cate-item{
  padding:30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow:0 0 30rpx -7rpx gray;
  box-sizing: border-box;
  margin:20rpx;
  width:320rpx;
  height:200rpx;
}